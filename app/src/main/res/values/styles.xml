<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>
    <style name="NoABTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="CardThemeNavy" parent ="Theme.AppCompat.Light.NoActionBar">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
        <item name="colorPrimary">#FF260067</item>
        <item name="colorPrimaryDark">#FF1A0046</item>
        <item name="colorAccent">#FF50E3C2</item>
        <item name="android:textColor">#FF260067</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="actionBackIcon">@mipmap/ic_arrow_left_navy</item>
        <item name="navBarVisibility">0</item>
    </style>

    <style name="CardThemeWhite" parent ="CardThemeNavy">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#dfdfdf</item>
        <item name="colorAccent">#FF50E3C2</item>
        <item name="actionBackIcon">@mipmap/ic_arrow_left_white</item>
        <item name="navBarVisibility">0</item>
    </style>

    <style name="CardThemeNavy.NoNavigationBar" parent="CardThemeNavy">
        <item name="navBarVisibility">2</item>
    </style>

    <style name="CardThemeWhite.NoNavigationBar" parent="CardThemeWhite">
        <item name="navBarVisibility">2</item>
    </style>

    <style name ="CardThemeWhite.NoNavigationBar.Gradient" parent="CardThemeWhite.NoNavigationBar">
        <item name="android:windowBackground">@drawable/bg_gradient_blue</item>
    </style>


    <style name="Button.Accent.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="Button.Accent" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>
</resources>
